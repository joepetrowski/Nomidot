
type ImOnline {
  id: ID! @id
  blockNumber: BlockNumber! @relation(name: "ImOnlineAtBlockNumber", link: INLINE)
  sender: String!
}

type Rewards {
  id: ID! @id
  amount: Int!
  authoredBlock: BlockNumber! @relation(name: "RewardsAtBlockNumber", link: INLINE)
  recipients: [String!]! @scalarList(strategy: RELATION)
}

type Slashing {
  id: ID! @id
  blockNumber: BlockNumber! @relation(name: "SlashingAtBlockNumber", link: INLINE)
  reason: String!
  amount: Int!
}

type Nominations {
  id: ID! @id
  validatorController: String!
  validatorStash: String!
  nominatorController: String!
  nominatorStash: String!
  session: Sessions! @relation(name: "NominationsAtSession", link: INLINE)
  bonded: Int!
}

type Stake {
  id: ID! @id
  blockNumber: BlockNumber! @relation(name: "StakeAtBlockNumber", link: INLINE)
  totalStake: Int!
}

type Validations {
  id: ID! @id
  start: BlockNumber! @relation(name: "ValidationsAtBlockNumber", link: INLINE)
  validatorController: String!
  validatorStash: String!
  validatorPreferences: Int!
}

type Sessions {
  id: ID! @id
  start: BlockNumber! @relation(name: "BlockNumberAtSessionStart", link: INLINE)
  end: BlockNumber! @relation(name: "BlockNumberAtSessionEnd", link: INLINE)
}

type TotalIssuance {
  id: ID! @id
  amount: Int!
}

type BlockNumber {
  id: Int! @unique @id
  number: Int!
  authoredBy: String!
  startDateTime: DateTime!
  hash: String! @unique
}
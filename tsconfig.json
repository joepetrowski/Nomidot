{
  "exclude": ["node_modules", "public", ".cache", "prisma-client"],
  "include": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "paths": {
      "@substrate/context": ["front/context/src"],
      "@substrate/ui-components": ["front/ui-components/src"],
      "@substrate/node-watcher": ["back/node-watcher/src"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  }
}